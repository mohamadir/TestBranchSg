<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/linear_border"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/radius_layout"
    android:weightSum="1">

    <TextView

        android:id="@+id/textAddRadius"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:text="Please write radius in meters: "
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_weight="0.05" />

    <TextView
        android:id="@+id/textView93"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:gravity="center"
        android:text="radius can help us to offer you places to enjoy.." />

    <EditText
        android:id="@+id/radiusEt"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:hint="etc. 50000 "
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/colorOrange"
        android:textSize="16dp"
        android:inputType="number"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/radiusTextView"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView92"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text=" Km." />

    </LinearLayout>

    <SeekBar
        android:id="@+id/mapSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50000"
        android:background="@color/white_greyish"
        android:min="1000"
        android:outlineProvider="paddedBounds"
        android:layout_weight="0.05" />

</LinearLayout>
