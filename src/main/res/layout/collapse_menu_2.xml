<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imagey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:fitsSystemWindows="true"
    android:scaleType="centerCrop"
    app:layout_collapseMode="pin"
    app:titleEnabled="false">

    <!--app:layout_collapseMode="parallax" למעלה   -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView172"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Groups tools"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/homeLinaretPage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/homePageButton"
                        android:layout_width="35dp"
                        android:clickable="true"

                        android:layout_height="40dp"
                        android:background="@drawable/homepage_icon"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Group Home" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/planeLinaret"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/newDetails_planBt"
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:background="@drawable/planic"
                        android:gravity="center"
                        android:clickable="true"

                        android:text="" />

                    <TextView
                        android:id="@+id/textVie3w171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="inteniary"
                       />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mapLinret"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newDetails_mapBt"
                        android:layout_width="32dp"
                        android:layout_height="40dp"
                        android:clickable="true"

                        android:background="@drawable/mapic"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/textV2iew171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Map" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/memberLinaret"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newDetails_membersBt"
                        android:layout_width="37dp"
                        android:layout_height="40dp"
                        android:clickable="true"

                        android:background="@drawable/membersic"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/textV3iew171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Members"
                       />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/voteLinaret"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newDetails_voteBt"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:clickable="true"

                        android:background="@drawable/votesic"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/textV4iew171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Vote"
                       />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/chatLInaret"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newDetails_chatBt"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:background="@drawable/chatic"
                        android:gravity="center"
                        android:clickable="true"

                        android:text="" />

                    <TextView
                        android:id="@+id/textView3171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chat"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/docLinaret"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newDetails_documentsBt"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:clickable="true"

                        android:background="@drawable/documentsic"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/textVie32w171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Documents"
                       />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/paymentLinaret"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newDetails_paymentsBt"
                        android:layout_width="44dp"
                        android:layout_height="40dp"
                        android:clickable="true"

                        android:background="@drawable/paymentsic"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/te76xtVie3w171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Payments"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="4"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/checkLIstLinaret"
                    android:focusable="true"

                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/checklistButton"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:background="@drawable/checklistttt"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/textVie3gfhw171"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CheckList"
                       />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>