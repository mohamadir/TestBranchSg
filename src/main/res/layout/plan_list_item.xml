<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:layout_height="?android:attr/listPreferredItemHeight"

    android:weightSum="1"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/linaretBaground"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#b7b39b"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/selct_actev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.69"
            android:text="Race Cars"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/offres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.30"
            android:gravity="center"
            android:text="125$"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/when_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.44" />

        <TextView
            android:id="@+id/votes_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.12"
            android:text="2"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SCBSwitch"
            android:layout_weight="0.31" />

    </LinearLayout>


</LinearLayout>