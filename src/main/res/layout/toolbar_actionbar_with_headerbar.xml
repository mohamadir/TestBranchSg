<android.support.v7.widget.Toolbar android:id="@+id/toolbar5"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:layout_collapseMode="pin"
    android:background="@color/White"
    android:layout_marginTop="7dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/GroupListActivity_SignInBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:visibility="gone"
        android:text="Sign Out           "
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/messageCountContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="8"
            android:gravity="right">

            <ImageView
                android:id="@+id/messageBt"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/notification"
                android:clickable="true"
                android:gravity="right" />

            <TextView
                android:id="@+id/messageCountTv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/badge_circle"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/messageBt2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignTop="@+id/messageBt"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_toLeftOf="@+id/messageBt"
                android:layout_toStartOf="@+id/messageBt"
                android:background="@drawable/chat_bar_icon"
                android:clickable="true"
                android:gravity="right" />

            <TextView
                android:id="@+id/messageCountTv2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@+id/messageBt2"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/messageBt2"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/badge_circle"
                android:gravity="right"
                android:text="90"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="invisible" />
        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.Toolbar>