<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snapgroup.Activities.NewGroupChooseHotel">


    <TextView
        android:id="@+id/broducastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotels"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lisVIewChooseHotel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/broducastButton"
        android:orientation="horizontal"
        android:id="@+id/linearLayout32">

        <TextView
            android:id="@+id/textView119"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nights"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/nigths_spiner"
            android:layout_width="160dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0.10" />

    </LinearLayout>
</RelativeLayout>
