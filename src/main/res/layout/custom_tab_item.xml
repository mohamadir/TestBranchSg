<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="top"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/button41"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_border"
        android:text="Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/remiveButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="22dp"
        app:srcCompat="@drawable/delete1"

        android:layout_alignBottom="@+id/button41" />

    <TextView
        android:id="@+id/nameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zohar Argov 1234"
        android:layout_alignBottom="@+id/button41"
        android:gravity="center"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_alignTop="@+id/button41"
        android:layout_alignRight="@+id/button41"
        android:layout_alignEnd="@+id/button41"
        android:layout_alignLeft="@+id/button41"
        android:layout_alignStart="@+id/button41" />
</RelativeLayout>