<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_border"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/radius_layout"
    android:weightSum="1">

    <TextView

        android:id="@+id/textAddRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.02"
        android:gravity="center"
        android:text="Please select hours for this location:"
        android:textColor="@color/colorOrange"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <Spinner
            android:id="@+id/hoursFromSp"
            android:layout_width="0dp"
            android:entries="@array/hoursfrom"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/hoursToSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/hoursto"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
