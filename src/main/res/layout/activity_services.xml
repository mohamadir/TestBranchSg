    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/menuBt"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:background="@drawable/menu"
                android:layout_alignTop="@+id/button27"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button26"
                android:layout_width="500dp"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:background="#b1bbcc"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="64dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/button27"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/logo2"
                android:layout_alignBottom="@+id/button26"
                android:layout_toRightOf="@+id/menuBt"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="89dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Snap A Group" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal"
            android:weightSum="2.5"
            >

            <LinearLayout
                android:layout_width="201dp"
                android:weightSum="3"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.69"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/serviceFlightBt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/service_button_border"
                        android:drawableTop="@drawable/plane"
                        android:text="Flights"

                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/servicePlacesBt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/service_button_border"
                        android:drawableTop="@drawable/pin"
                        android:text="Plcaes"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/serviceGUideBt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/service_button_border"
                        android:drawableTop="@drawable/guide"
                        android:text="Tour Guide"
                        android:textSize="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:layout_weight="3.97">

                    <Button
                        android:id="@+id/serviceHotelsBt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/service_button_border"
                        android:drawableTop="@drawable/hotel"
                        android:text="Hotels"

                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/serviceTransportBt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/service_button_border"
                        android:drawableTop="@drawable/bus"
                        android:text="Transport"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/serviceRestaurantBt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/service_button_border"
                        android:drawableTop="@drawable/restaurant"
                        android:text="Restaurants"
                        android:textSize="9dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.69">

                <Button
                    android:id="@+id/createNewGroupBt"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1.44"
                    android:background="@drawable/button_border_pay"
                    android:text="Create A
    New Trip"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/button29"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@drawable/rsz_1jerusalem"
                android:textStyle="bold"

                android:text="
                                                         jerusalem"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/button31"
                        android:layout_width="match_parent"
                        android:layout_height="118dp"
                        android:text="                  India"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:background="@drawable/rsz_3rsz_1rsz_london" />

                    <Button
                        android:id="@+id/button30"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:textColor="#ffff"
                        android:text="India



"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rsz_1rsz_1rsz_india" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="
                         NewYork
"
                        android:textColor="#fff"
                        android:background="@drawable/rsz_3rsz_newyork"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/button32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rsz_2rsz_japan"
                        android:layout_margin="2dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="                    Japan



"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        app:headerLayout="@layout/navigate_header"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>