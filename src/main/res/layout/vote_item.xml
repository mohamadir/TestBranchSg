<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linaretBaground"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#b7b39b"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/selct_actev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.90"
            android:text="Race Cars"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/offres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.30"
            android:gravity="center"
            android:text="125$"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/when_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.44" />

        <TextView
            android:id="@+id/votes_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.31"
            android:text="2"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switch2"
            android:backgroundTint="@color/Black"
            android:theme="@style/SCBSwitch"
            android:layout_width="58dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>