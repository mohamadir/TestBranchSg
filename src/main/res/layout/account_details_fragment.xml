<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/member_no_picture" />

            <View
                android:id="@+id/button34"
                android:layout_width="wrap_content"
                android:layout_height="0.01dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradiant_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_NameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.96"
                        android:text="Daniel Cohen"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/nameEdit"
                        android:layout_width="27dp"
                        android:layout_height="32dp"
                        android:background="@drawable/edit_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_PhoneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.96"
                        android:text="+972-526655758"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/phoneEdit"
                        android:layout_width="27dp"
                        android:layout_height="32dp"
                        android:background="@drawable/edit_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_EmailTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.96"
                        android:text="Email@dimain.com"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/emailEdit"
                        android:layout_width="27dp"
                        android:layout_height="32dp"
                        android:background="@drawable/edit_icon" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/button34354"
                android:layout_width="wrap_content"
                android:layout_height="0.01dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradiant_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button54"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="#d5cd9c"
                android:textColor="@color/White"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textDirection="firstStrong"
                android:text="Sign Out" />
            <Button
                android:id="@+id/editPasswordButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="#d5cd9c"
                android:textColor="@color/White"
                android:padding="10dp"
                android:textDirection="firstStrong"
                android:text="Change Password" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>