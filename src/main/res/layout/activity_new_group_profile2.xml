<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.snapgroup.Activities.NewGroupProfile2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flightServiceActivity_flyFromSp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Number Of Group members" />

        <Spinner
            android:id="@+id/profile2Activity_maxMembersSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/unlimted"
            android:paddingTop="10dp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/flightServiceActivity_flyFromSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView24"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/spinner7"
        android:entries="@array/hours" />

    <Spinner
        android:id="@+id/spinner7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/days"
        android:layout_alignBaseline="@+id/flightServiceActivity_flyFromSp"
        android:verticalScrollbarPosition="left"
        android:layout_alignBottom="@+id/flightServiceActivity_flyFromSp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:background="@color/colorOrange"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:gravity="center"

            android:text="New Group"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:text="  Profile"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile2Activity_nextBt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Next"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.13"
            android:paddingLeft="20dp"
            android:text="JOin the Group Will End at"
            />

        <TextView
            android:id="@+id/profile2Activity_dateToTv"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.89"
            android:text="00/00/00"
            android:textAlignment="center" />

        <Button
            android:id="@+id/hotel_service_dpTo"
            android:layout_width="26dp"
            android:layout_height="20dp"
            android:background="@drawable/celndr"
            android:onClick="showDatePickerDialog2"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout4"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView17"
            android:text="Group Starting At "
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_weight="0.55" />

        <TextView
            android:id="@+id/profile2Activity_dateFromTv"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.41"
            android:text="00/00/00"
            android:textAlignment="center" />

        <Button
            android:id="@+id/hotel_service_tvTo"
            android:layout_width="26dp"
            android:onClick="showDatePickerDialog"
            android:layout_height="20dp"
            android:layout_weight="0.18"
            android:background="@drawable/celndr" />

    </LinearLayout>

    <TextView

        android:paddingLeft="20dp"
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="22dp"
        android:text="Group Trip/Activity will last"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flightServiceActivity_flyFromSp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView235"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Number Of Group members" />

        <Spinner
            android:id="@+id/profile2Activity_maxMembers2Sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/unlimted"
            android:paddingTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flightServiceActivity_flyFromSp"
        android:layout_marginTop="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profile2Activity_chooseCsvBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="Load Csv members"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <!-- <com.hitomi.cmlibrary.CircleMenu
            android:id="@+id/circle_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1" />-->

        <Button
            android:id="@+id/profile2Activity_inviteMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="Invite Members"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <Button
            android:id="@+id/add_single_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="add single member"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout8"
        android:orientation="horizontal"
        android:id="@+id/linearLayout9">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout9"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout10">

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:text="Help me to promote my group"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView30"
        android:layout_alignStart="@+id/textView30" />

    <Button
        android:id="@+id/button3"
        android:layout_width="81dp"
        android:layout_height="17dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorGreen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView9"
        android:text="Select" />

  <!--  <ListView
        android:id="@+id/inviteMembersLv"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignLeft="@+id/spinner7"
        android:layout_alignStart="@+id/spinner7"
        android:layout_below="@+id/linearLayout10" />-->

</RelativeLayout>