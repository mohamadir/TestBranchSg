                    android:id="@+id/seekbarReview"
                    android:layout_width="252dp"
                    android:layout_height="58dp"
                    android:background="@null"
                    android:backgroundTint="@color/accent_color"
                    android:max="50000"
                    android:min="1000"
                    android:outlineProvider="paddedBounds"
                    android:scrollbarSize="40dp"

                    android:thumb="@drawable/progres_barr"
                    android:layout_weight="11.04" />


                <TextView
                    android:id="@+id/rightReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Good" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="7">

                <EditText
                    android:id="@+id/messageEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.21"
                    android:hint="Wrie your review"
                    android:inputType="textPersonName"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/sendButtonReview"
                    android:layout_width="50dp"
                    android:layout_height="29dp"

                    android:layout_weight="0.37"
                    android:background="@drawable/buttonsignshape"
                    android:text="Send"
                    android:textColor="@color/White" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
