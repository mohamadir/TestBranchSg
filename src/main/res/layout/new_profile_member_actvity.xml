            <TextView
                android:id="@+id/textView152"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Social"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button49"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="7dp"
                    android:layout_weight="0.00"
                    android:background="@drawable/facebook_icon" />

                <Button
                    android:id="@+id/button48"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="7dp"

                    android:layout_weight="0.01"

                    android:background="@drawable/piner_icon" />

                <Button
                    android:id="@+id/button47"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="7dp"

                    android:background="@drawable/google_icon" />

                <Button
                    android:id="@+id/button46"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/twitter_icon"

                    />

                <Button
                    android:id="@+id/button4s6"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/snapchat_icon"

                    />


                <Button
                    android:id="@+id/button44"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="7dp"

                    android:background="@drawable/instegram_icon"

                    />
            </LinearLayout>

            <View
                android:id="@+id/button334"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradiant_color2" />

            <TextView
                android:id="@+id/textView1522"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Video"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9"
                android:orientation="horizontal">

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/button50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_right_icon"
                   />
            </LinearLayout>


            <View
                android:id="@+id/button333"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradiant_color2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Add Review"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/linaret22213"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout22"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="15">

