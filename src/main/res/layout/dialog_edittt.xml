<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/anitherfirstNameJoin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/anitherLastNameJoin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/anitherPassportJoin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="passport id"
            android:inputType="textPersonName"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/another_person_date_birthdayET1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Date of Bith"
            android:inputType="textPersonName"
            android:textSize="14sp" />

        <Button
            android:id="@+id/another_person_date_birthdayBT1"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_weight="0.18"
            android:background="@drawable/calendar"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="6sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/another_person_issue_ET1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="issue date"
            android:inputType="textCapCharacters|textPersonName"
            android:textSize="14sp" />

        <Button
            android:id="@+id/another_person_issue_Bt1"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_weight="0.18"
            android:background="@drawable/calendar"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="6sp" />


        <EditText
            android:id="@+id/another_person_exp_Et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Expiration date"
            android:inputType="textPersonName"
            android:textSize="14sp" />

        <Button
            android:id="@+id/another_person_exp_BT1"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_weight="0.18"
            android:background="@drawable/calendar"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="6sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/anitherGenderJoin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Selct Gender"
            android:inputType="textCapCharacters|textPersonName"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/anitherAgeJoin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Cancel"
            android:textColor="@color/White"
            android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/button52"
        android:background="@color/colorOrange"
        android:layout_marginLeft="10dp"
        android:textColor="@color/White"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />
    </LinearLayout>

</LinearLayout>