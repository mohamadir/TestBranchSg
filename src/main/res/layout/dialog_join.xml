<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView110"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:gravity="center"
        android:padding="8dp"
        android:text="joining as Single ? "
        android:textColor="@color/colorDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView159"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:layout_weight="0.06"
        android:text="In case you want to Join with more then one person2, or you would like to be linked to an existing member, Please ll the “Going with” form, otherwise just click “Join”."
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.43"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goingWithButton"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/accent_color"
            android:text="Going with"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:background="@color/accent_color"
            android:text="join"
            android:textColor="@color/White" />
    </LinearLayout>

</LinearLayout>
