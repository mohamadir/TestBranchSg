<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="3dp">
        <shape android:shape="oval"
            >
            <gradient
                android:centerColor="#FF999900"
                android:endColor="#FF999900"
                android:gradientRadius="3"
                android:startColor="#FF999900"
                android:type="radial"
                />
        </shape>

    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval" >
            <size
                android:height="7dp"
                android:width="7dp" />

            <solid android:color="#FF999900" />
        </shape>
    </item>

</layer-list>