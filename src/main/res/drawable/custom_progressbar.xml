<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#fceacc"
                android:centerColor="#f7d08f"
                android:centerY="1.0"
                android:endColor="#f7b84f"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#1e9635"
                    android:centerColor="#74fc8e"
                    android:centerY="1.0"
                    android:endColor="#148229"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>